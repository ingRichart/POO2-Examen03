@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<form asp-action="Login" asp-controller="User">
    <img class="mb-4" src="../img/header50UN.png" height="77">
    <h1 class="h3 mb-3 fw-normal">Welcome</h1>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    <div class="form-floating">
        <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com">
        <label asp-for="Email">Email address</label>
        <span asp-validation-for="Email" class="text-danger" ></span>
    </div>
    <div class="form-floating">
        <input type="password" class="form-control" asp-for="Password" placeholder="Password">
        <label asp-for="Password">Password</label>
        <span asp-validation-for="Password" class="text-danger" ></span>
    </div>

    <div class="form-check text-start my-3">
        <input class="form-check-input" type="checkbox" yasp-for="Remember">
        <label class="form-check-label" asp-for="Remember">
            Remember me
        </label>
    </div>
    
    <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>

    <hr>
    <a class="btn btn-success w-100 py-2" type="submit" asp-action="Registry" asp-controller="User">
        Created account
    </a>

    <p class="mt-5 mb-3 text-body-secondary">
        <img src="~/img/logo50UN.png" width="40" height="32">
        &copy; 2024 - Universidad del Norte
    </p>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}